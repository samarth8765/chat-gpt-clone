<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body {
            background-color: rgb(51, 230, 247);
        }

        .query {
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            background-color: #4e4b4b;
            border: solid 4px rgb(249, 132, 247);
            border-radius: 4px;
            padding: 10px;
            color: white;
            font-size: large;
        }

        .question,
        .answer {
            color: rgb(214, 253, 73);
        }

        p {
            color: rgb(255, 255, 255);
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>Showing Data</h1>
        <% let count=1 %>
            <% getData.forEach(getData=> { %>
                <div class="query">
                    <h2 class="question"> Question - <%= count++ %>
                    </h2>
                    <p>
                        <%= getData.query %>
                    </p>
                    <h2 class="answer">Answer:</h2>
                    <p>
                        <%= getData.reply %>
                    </p>
                </div>
                <br>
                <% }) %>
    </div>

</body>

</html>